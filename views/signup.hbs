<!DOCTYPE html>
<html lang="en" style=" height: 100%;">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1" charset="utf-8">
    <title>rekordbot</title>
</head>
<body style="background:url('/public/cyclist3.webp');background-size: cover;background-repeat: no-repeat;height: 100%;width: 100%;">
<div></div>

<div class="pt-5 container">
    <div class="row">
        <div class=" col-xl-6 col-lg-8 col-12 col-sm-12  px-4 py-5 rounded-3 border shadow-lg"
             style="background-color: white;">
            <div class="mb-4">
                <h2>Create your free account</h2>
            </div>
            <form class="needs-validation" novalidate action="/register" method="post">
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label for="validationCustom01">E-mail</label>
                        <input type="email" name="email" class="form-control" id="validationCustom01"
                               placeholder="E-mail"
                               required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="validationCustom02">Password</label>
                        <input type="password" name="password" class="form-control" id="pass1" placeholder="Password"
                               required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="validationCustom03">Repeat password</label>
                        <input type="password" class="form-control" id="pass2" placeholder="Password"
                               required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>


                <button class="btn btn-primary" type="submit">Sign up</button>
            </form>
        </div>
    </div>
</div>
</div>
</body>
<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            var input1 = document.getElementById('pass1');
            var input2 = document.getElementById('pass2');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    input2.setCustomValidity(''); // Re
                    console.log(input1.value);
                    console.log(input2.value);
                    if (input1.value !== input2.value) {
                        event.preventDefault();
                        event.stopPropagation();
                        // Add custom validation feedback if necessary
                        input2.setCustomValidity('Values must match!');
                    }
                    form.classList.add('was-validated');
                }, false);
                input1.addEventListener('input', function () {
                    if (input1.value === input2.value) {
                        input2.setCustomValidity('');
                    }
                });

                input2.addEventListener('input', function () {
                    if (input1.value === input2.value) {
                        input2.setCustomValidity('');
                    }
                });
            });
        }, false);
    })();
</script>
</html>